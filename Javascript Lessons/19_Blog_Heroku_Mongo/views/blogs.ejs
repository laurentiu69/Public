<%- include('./partials/header.ejs') %>
<hr id="top">
<hr>
<hr>
<div class="ui main text container ">
    <% blogs.forEach(function (blog){ %>
        <div class="ui raised text segment ">
            <div class="ui column grid content">
            <div  id="<%= blog._id %>" class="ui left floated fourteen wide column header"><%= blog.title %></div>
            <form class="ui mini form right floated one wide column " action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" >
               <button class="ui field delete" data-content="You can't delete the old posts!" type="submit">X</button>
            </form>
            </div>

            <div class="ui segment">
                <img src="<%= blog.image %>" alt="<%= blog.image %>" class="ui big rounded centered image">
                <div class="ui basic justified"><%- blog.body %></div>
                <a href="#top">
                    <div class="ui animated right floated button" tabindex="0" style="margin-right: 1rem">
                        <div class="visible content">
                            &#8679; <!--//up arrow-->
                        </div>
                        <div class="ui header hidden content">
                            Top
                        </div>
                    </div>
                </a>
                <a href="/blogs/<%= blog._id %>">
                    <div class="ui animated right floated button" tabindex="0">
                        <div class="visible content">
                            &#8943;
                        </div>
                        <div class="ui header  hidden content ">
                            More
                        </div>
                    </div>
                </a>
                <a href="/blogs/<%= blog._id %>/edit">
                    <div class="ui animated right floated button" tabindex="0" style="margin-right: 1rem">
                        <div class="visible content">
                            &#128221;
                        </div>
                        <div class="ui header hidden content">
                            Edit
                        </div>
                    </div>
                </a>
            </div>
            <span><%= blog.created.toUTCString(); %></span>
        </div>
    <% }) %>
</div>
<script>
    $('button.ui.delete').popup({});
</script>
<%- include("./partials/footer.ejs") %>
